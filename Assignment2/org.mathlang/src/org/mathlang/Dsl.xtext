grammar org.mathlang.Dsl with org.eclipse.xtext.common.Terminals

generate dsl "http://www.mathlang.org/Dsl"

MathExp:
	'result' 'is' exp=Exp
;

Exp: // left recursion fixed
	left=Primary (operator=ExpOp right=Exp)?
;

ExpOp:
	{Plus} '+' | {Minus} '-'	 | {Mult} '*' | {Div} '/'	
;

Primary:
	Number | Parenthesis
;

Parenthesis:
	'(' exp=Exp ')'
;

Number:
	value=INT
;
